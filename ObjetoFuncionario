package apliccation;

public class Funcionario {
	
	public String nome;
	public double salarioBruto;
	public double impostos;
	public double porcentagemAumento;
	
	public double salarioLiquido() {
		
		return salarioBruto - impostos;
		
	}
	
	public double aumentoSalarial(double porcentagemAumento) {
		double aumento = salarioBruto *(porcentagemAumento / 100) ;
		
		this.salarioBruto += aumento;
		
	}
	
	
	

}
